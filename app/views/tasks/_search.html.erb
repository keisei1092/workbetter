<%= form_tag('/', method: 'get') do %>
  <%= label_tag(:q, t('search.for')) %>
  <%= text_field_tag(:q, params[:q]) %>

  <%= label_tag(:status, 'ステータス') %>
  <%= select_tag :status, options_for_select(Task.statuses.map { |k, v| [k.humanize(), k] }, params[:status]), include_blank: true %>

  <%= submit_tag(t('search.label')) %>
<% end %>
